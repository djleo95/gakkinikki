<div class="col-sm-4 col-sm-offset-4">
  <div class="panel panel-primary">
    <div class="panel-body">
      <h2 class="text-center">Log in</h2>
      <hr>
      <% flash.each do |name, msg| %>
        <%= content_tag :div, msg, style: "color: red", id: "flash_#{name}" if msg.is_a?(String) %>
      <% end %>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
          <%= f.label :email, class: "form-label" %><br/>
          <%= f.email_field :email, autofocus: true, class: "form-control" %>
        </div>

        <div class="field">
          <%= f.label :password, class: "form-label" %><%= link_to "Forgot your password?",
            new_password_path(resource_name), class: "small-text" %>
          <br/>
          <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
        </div>

        <% if devise_mapping.rememberable? -%>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end -%>
        <hr>
        <div class="actions">
          <%= f.submit "Log in", class: "btn btn-primary btn-block btn-big" %>
        </div>
      <% end %>

      <div class="text-right margin-top-5">
        <%= link_to "Don't have account? Sign up", new_registration_path(resource_name),
          class: "italic" %>
      </div>
      <br/>
    </div>
  </div>
</div>
